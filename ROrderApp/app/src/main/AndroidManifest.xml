<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vibeosys.rorderapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>

    <application
        android:name=".util.AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.SelectRestaurantActivity"
            android:label="@string/select_rest" />
        <activity
            android:name=".activities.FlashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activities.TableMenusActivity"
            android:label="@string/title_activity_table_menus"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.BillSummeryActivity"
            android:label="@string/title_bill_summary">

        </activity>
        <activity
            android:name=".activities.TableFilterActivity"
            android:label="@string/title_filter_menu"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity
            android:name=".activities.TableOrderActivity"
            android:label="@string/order_summary"></activity>
        <activity
            android:name=".activities.BillDetailsActivity"
            android:label="@string/bill_details"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".activities.BillPaymentOptionActivity"
            android:label="@string/payment_option_screen"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".activities.AddCustomerActivity"
            android:label="@string/payment_option_screen"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".activities.CustomerFeedBackActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"></activity>
        <activity android:name=".activities.ChefOrdersDisplayActivity"></activity>
        <activity
            android:name=".activities.FeedbackActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Base.Animation.AppCompat.Dialog"></activity>
        <activity
            android:name=".activities.AboutUsActivity"
            android:parentActivityName=".activities.FlashScreenActivity"></activity>
        <activity
            android:name=".activities.NotificationActivity"
            android:parentActivityName=".MainActivity"></activity>

        <service
            android:name=".service.SyncService"
            android:exported="false" />
        <service
            android:name=".service.ChefService"
            android:exported="false" />
    </application>

</manifest>
