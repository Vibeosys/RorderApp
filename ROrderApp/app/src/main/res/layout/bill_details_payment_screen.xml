<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:gravity="center|top"
    android:orientation="vertical">

    <com.vibeosys.rorderapp.views.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/Payment_by"
        android:textSize="22dp" />

    <Spinner
        android:id="@+id/paymentBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/billing_spineer_border"
        android:drawSelectorOnTop="true">

    </Spinner>

    <Button
        android:id="@+id/closeTableBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_custom"
        android:gravity="center"
        android:text="@string/Payment_close"
        style="@style/button_custom_new"  />
</LinearLayout>