<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="fill|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/table_border"
        android:orientation="horizontal">

        <com.vibeosys.rorderapp.views.RoundedImageView
            android:id="@+id/imgMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:src="@drawable/veg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txtFoodType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="Type"
                    android:textColor="@color/listview_item" />

                <TextView
                    android:id="@+id/txtMenuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="Manchurian"
                    android:textColor="@color/listview_item" />

                <TextView
                    android:id="@+id/txtMenuTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="Chinese"
                    android:textColor="@color/listview_item" />

                <TextView
                    android:id="@+id/txtCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="Starters"
                    android:textColor="@color/listview_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_gravity="right">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:src="@drawable/rupee_symbol" />

                <TextView
                    android:id="@+id/txtMenuPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:text="90"
                    android:textColor="@color/listview_item" />

                <ImageView
                    android:id="@+id/imgPlus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_minus" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Qty:"
                    android:layout_margin="4dp"
                    android:textColor="@color/listview_item" />

                <TextView
                    android:id="@+id/txtMenuQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_margin="4dp"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/listview_item" />

                <ImageView
                    android:id="@+id/imgMinus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_action_add" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>