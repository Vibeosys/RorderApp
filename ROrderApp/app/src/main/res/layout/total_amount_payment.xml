        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/custom_background">

            <TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:background="@android:color/holo_red_light" />
            </TableRow>

            <TableRow>


            </TableRow>

            <TableRow
                android:background="@color/text_hint"
                android:gravity="center">

                <TextView
                    style="@style/largeText_bold_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:text="Bill Details" />
            </TableRow>

            <TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:background="@android:color/holo_red_light" />
            </TableRow>

        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp">

            <TableRow
                android:layout_marginBottom="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/AmtTitle"
                    style="@style/largeTextBillingDtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount" />


                <TextView
                    android:id="@+id/PaymentAmt"
                    style="@style/largeTextBillingDtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="112000.00" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/TaxTitle"
                    style="@style/largeTextBillingDtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Taxes" />


                <TextView
                    android:id="@+id/TaxAmt"
                    style="@style/largeTextBillingDtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"

                    android:text="120.00" />

            </TableRow>


            <TableRow
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/ServicesChrgTitle"
                    style="@style/largeTextBillingDtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Service Charges" />


                <TextView
                    android:id="@+id/ServicesChrgAmt"
                    style="@style/largeTextBillingDtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="50000.00" />

            </TableRow>

            <TableRow
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/DiscountTitle"
                    style="@style/largeTextBillingDtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount" />


                <TextView
                    android:id="@+id/DiscountAmt"
                    style="@style/largeTextBillingDtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="10.00" />

            </TableRow>

            <TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="3"
                    android:background="@android:color/background_dark" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TotalTitle"
                        style="@style/total_bold_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/rupee_icon" />

                        <TextView
                            android:id="@+id/TotalAmt"
                            style="@style/total_bold_bill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:paddingLeft="3dp"
                            android:text="40.00" />
                    </LinearLayout>
                </LinearLayout>


            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/BillDetailsPayment"
                style="@style/button_custom_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0.7"
                android:background="@drawable/button_custom"
                android:gravity="center"
                android:text="@string/btn_pay_now" />

            <Button
                android:id="@+id/btnBillSummary"
                style="@style/button_custom_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0.7"
                android:background="@drawable/button_custom"
                android:gravity="center"
                android:text="@string/Bill_Summary" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>