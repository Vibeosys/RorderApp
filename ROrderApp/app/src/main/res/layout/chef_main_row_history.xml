<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:padding="4dp">


        <com.vibeosys.rorderapp.views.CustomTextView
            android:id="@+id/chefMenuNameHistory"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="false"
            android:text="veg Manchurain"
            android:textColor="@color/listview_item"
            android:textSize="16sp" />

        <com.vibeosys.rorderapp.views.CustomTextView
            android:id="@+id/commentForChefHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:textColor="@color/listview_item" />

        <com.vibeosys.rorderapp.views.CustomTextView
            android:id="@+id/chefQtyHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:textColor="@color/listview_item"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>