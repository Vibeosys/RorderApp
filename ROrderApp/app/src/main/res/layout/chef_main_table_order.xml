<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:paddingTop="2dp"
    android:background="@drawable/custom_border"
    android:focusable="false"
    android:gravity="center_vertical"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="4dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTableName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="No"
                        android:textSize="10sp"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/orderTakenBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="@color/black_color"
                        android:textSize="22sp" />
                <TextView
                    android:id="@+id/txtHash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="#"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/cheforderNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:layout_weight="1"
                    android:text="112"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtServedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Served by"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/orderFromTableNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:focusable="false"
                android:paddingLeft="60dp"
                android:text="DemoName"
                android:textColor="@color/listview_item"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:focusable="false"
                android:paddingLeft="8dp"
                android:text="29 mins ago"
                android:textColor="@color/listview_item" />
            <TextView
                android:id="@+id/txtExpLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:focusable="false"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Click To Expand"
                android:layout_weight="1"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/OrderDoneChef"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:focusable="false"
                android:text="Complete"
                android:textColor="@color/White"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>