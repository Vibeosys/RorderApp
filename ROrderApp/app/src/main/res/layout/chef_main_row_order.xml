<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:background="@color/White"
    android:focusable="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        >

        <TextView
            android:id="@+id/chefMenuNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:paddingEnd="5dp"
            android:textColor="@color/listview_item"
            />

        <TextView
            android:id="@+id/chefMenuName"
            android:layout_width="50dp"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:text="veg Manchurain"
            android:textColor="@color/listview_item"
            android:singleLine="false"
            android:textSize="14sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/commentForChef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/listview_item"
            />
        <TextView
        android:id="@+id/chefQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 "
        android:textSize="16sp"
            android:paddingRight="2dp"
            android:gravity="right"
        android:textColor="@color/listview_item" />
        <TextView
            android:id="@+id/cQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/light_grey" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingBottom="2dp"
        android:background="@drawable/custom_border">

        <TextView
            android:id="@+id/chefMenuComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing text "
            android:textSize="12sp"
            android:paddingStart="22dp"
            android:paddingEnd="5dp"
            android:textColor="@color/red"
            />

    </LinearLayout>
</LinearLayout>