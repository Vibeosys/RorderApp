<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:focusable="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:padding="4dp">

        <CheckBox
            android:id="@+id/chefCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/chefMenuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="veg Manchurain"
            android:textColor="@color/listview_item"
            android:singleLine="false"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/commentForChef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add more spices for this "
            android:textColor="@color/listview_item"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/chefQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 "
            android:layout_weight="1"
            android:textColor="@color/listview_item" />

    </LinearLayout>
</LinearLayout>