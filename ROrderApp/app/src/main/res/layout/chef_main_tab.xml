<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"

        android:focusable="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1.5dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.vibeosys.quickserve.views.CustomTextView
                        android:id="@+id/chefTxtTableNameTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="No."
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp" />

                    <com.vibeosys.quickserve.views.CustomTextView
                        android:id="@+id/chefTableNumberTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="1"
                        android:textColor="@color/black_color"
                        android:textSize="24sp" />

                    <com.vibeosys.quickserve.views.CustomTextView
                        android:id="@+id/cheftxtHashTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="#"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp" />

                    <com.vibeosys.quickserve.views.CustomTextView
                        android:id="@+id/cheforderNumberTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="112"
                        android:textColor="@color/black_color"
                        android:textSize="24sp" />

                </LinearLayout>


            </LinearLayout>


            <!--<TextView
                android:id="@+id/txtServedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:text="Served by"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1.5dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/servedByIconTab"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:src="@drawable/ico_served_by_black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <com.vibeosys.quickserve.views.CustomTextView
                    android:id="@+id/chefOrderServedByTab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="DemoName"
                    android:textColor="@color/listview_item"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1.5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">


                    <!--<ImageView
                        android:id="@+id/chefOrderDonIconTab"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_tick_chef" />-->
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hrsGlassIcon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="bottom"
            android:src="@drawable/icon_hours_glass" />

        <com.vibeosys.quickserve.views.CustomTextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="4dp"
            android:focusable="false"
            android:text="29 mins ago"
            android:textColor="@color/listview_item"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>